{
  "src_folders" : ["tests"],

  "webdriver" : {
    "start_process": true,
    "cli-args": [
      "--verbose"
    ],
    "server_path": "node_modules/.bin/chromedriver",
    "port": 9515
  },

  "test_settings" : {
    "default" : {
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "args" : ["--no-sandbox"]
        }
      },
      "launch_url": "http://localhost:8080"
    }
  }
}
